{
    "name": "polidog/todo",
    "type": "project",
    "description": "todo demo application",
    "license": "proprietary",
    "require": {
        "php": ">=7.0.0",
        "roave/security-advisories": "dev-master",
        "bear/package": "^1.4.0",
        "josegonzalez/dotenv": "^2.1",
        "madapaja/twig-module": "^1.1",
        "ray/aura-sql-module": "^1.0",
        "ray/web-form-module": "^0.5.4",
        "koriym/now": "^1.0",
        "koriym/query-locator": "^1.3",
        "koriym/http-constants": "^1.0.1",
        "bear/accept": "^0.1.0",
        "bear/aura-router-module": "~1.0",
        "bear/api-doc": "^0.1"
    },
    "require-dev": {
        "bear/qatools": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Polidog\\Todo\\": "src/"
        }
    },
    "scripts": {
        "setup": ["php bin/setup.php"],
        "test": ["phpunit"],
        "coverage": ["php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"],
        "cs": ["php-cs-fixer fix -v --dry-run", "phpcs --standard=./phpcs.xml src"],
        "cs-fix": ["php-cs-fixer fix -v", "phpcbf src"],
        "serve": "php -dzend_extension=xdebug.so -S 127.0.0.1:8080 -t public",
        "serve-api": "php -dzend_extension=xdebug.so -S 127.0.0.1:8081 bootstrap/api.php",
        "api": "php bootstrap/api.php",
        "web": "php bootstrap/web.php",
        "deploy-prod": "cd bin/deploy; php deployer.phar deploy prod",
        "deploy-stage": "cd bin/deploy; php deployer.phar deploy stage"
    }
}
